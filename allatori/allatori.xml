<config>
    <input>
        <jar in="../target/*.jar" out="../target/*.jar"/>
    </input>

    <classpath>
        <jar name="../target/lib/*.jar"/>
    </classpath>

    <ignore-classes>
        <class template="class regex:io.cordys.*"/>
    </ignore-classes>

    <keep-names>
        <class template="class io.cordys.crm.xpack.*.*" access="private+">
            <field access="private+"/>
            <method access="protected+"/>
        </class>
    </keep-names>

    <property name="log-file" value="log.xml"/>
</config>